<Window x:Class="_20260218_WpfApp1.View.AddCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20260218_WpfApp1"
        mc:Ignorable="d"
        Title="Car" Height="auto" Width="auto" WindowStartupLocation="CenterScreen" Foreground="White">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Viewbox Stretch="UniformToFill">
            <Grid Background="#FF672121" Height="auto" Width="auto">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Background="#FF672121">
                    <TextBlock Text="CAR RENTAL SYSTEM" Foreground="WHITE" Style="{StaticResource Title}" VerticalAlignment="Center"/>
                    <Border Style="{StaticResource MainBorder}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel VerticalAlignment="Center" Width="auto">
                            <TextBlock Text="ADD A CAR" HorizontalAlignment="Center" Style="{StaticResource Header}"/>
                            <TextBlock Text="This is where the car will be added."/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Viewbox>
    </ScrollViewer>
</Window>
