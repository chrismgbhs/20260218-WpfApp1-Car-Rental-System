<Window x:Class="_20260218_WpfApp1.View.AdminMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20260218_WpfApp1"
        mc:Ignorable="d"
        Title="Admin Dashboard" WindowStartupLocation="CenterScreen" Foreground="White">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Viewbox Stretch="UniformToFill">
            <Grid Background="#FF672121" Height="1080" Width="1920">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Border -->
                    <RowDefinition Height="*"/>
                    <!-- Main Menu fills remaining space -->
                </Grid.RowDefinitions>

                <TextBlock Text="CAR RENTAL SYSTEM" Foreground="White" Style="{StaticResource Title}" Grid.Row="0" Margin="25,40,25,40"/>
                <Border Style="{StaticResource MainBorder}" Grid.Row="1"/>

                <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="MAIN MENU" HorizontalAlignment="Center" Style="{StaticResource Header}"/>
                    <Border Style="{StaticResource NormalButtonBorder}">
                        <Button Content="View Available Cars" Style="{StaticResource NormalButton}" Click="Button_Click_1"/>
                    </Border>
                    <Border Style="{StaticResource NormalButtonBorder}">
                        <Button Content="View Rented Cars" Style="{StaticResource NormalButton}" Click="Button_Click_2"/>
                    </Border>
                    <Border Style="{StaticResource NormalButtonBorder}">
                        <Button Content="Send Car to Maintenance or Return Car from Maintenance" Style="{StaticResource NormalButton}" Click="Button_Click_3"/>
                    </Border>
                    <Border Style="{StaticResource NormalButtonBorder}">
                        <Button Content="View Cars in Maintenance" Style="{StaticResource NormalButton}" Click="Button_Click_5"/>
                    </Border>
                    <Border Style="{StaticResource NormalButtonBorder}">
                        <Button Content="View Maintenance History" Style="{StaticResource NormalButton}" Click="Button_Click_4"/>
                    </Border>
                    <Border Style="{StaticResource NormalButtonBorder}">
                        <Button Content="Add a Car" Style="{StaticResource NormalButton}" Click="Button_Click_6"/>
                    </Border>
                    <Border Style="{StaticResource NormalButtonBorder}">
                        <Button Content="Add Multiple Cars via CSV file" Style="{StaticResource NormalButton}" Click="Button_Click_7"/>
                    </Border>
                    <Border Style="{StaticResource NormalButtonBorder}">
                        <Button Content="Exit and Save" Style="{StaticResource NormalButton}" Click="Button_Click"/>
                    </Border>
                    
                </StackPanel>
            </Grid>
        </Viewbox>
    </ScrollViewer>
</Window>
