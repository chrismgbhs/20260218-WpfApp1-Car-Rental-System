<Window x:Class="_20260218_WpfApp1.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20260218_WpfApp1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Viewbox Stretch="UniformToFill" HorizontalAlignment="Center">
            <Grid Height="auto" Width="auto">
                <Image Source="/Image/bg.png"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border BorderBrush="#FF672121" CornerRadius="10" Style="{StaticResource ElementBorder}">
                        <Grid>
                            <Rectangle Fill="#FF672121" Opacity="0.5"></Rectangle>
                            <StackPanel>
                                <Image Source="/Image/Car.png" Height="150" Margin="10,10,10,10"/>
                                <TextBlock Text="The future is here: flying cars!" FontStyle="Italic" HorizontalAlignment="Center" Foreground="White" Style="{StaticResource BodyTextStyle}"/>
                                <TextBlock Text="LOGIN" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Style="{StaticResource Header}"/>
                                <TextBlock Text="Username" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Style="{StaticResource BodyTextStyle}"/>

                                <Border Style="{StaticResource TextBoxBorder}">
                                    <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Style="{StaticResource BodyTextBox}"/>
                                </Border>

                                <TextBlock Text="PIN" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Style="{StaticResource BodyTextStyle}"/>
                                <Border Style="{StaticResource TextBoxBorder}">
                                    <TextBox Width="200" Style="{StaticResource BodyTextBox}"/>
                                </Border>

                                <Border Style="{StaticResource MajorButtonBorder}">
                                    <Button Content="SUBMIT" Style="{StaticResource MajorButton}" Click="Button_Click" />
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Viewbox>
    </ScrollViewer>
</Window>