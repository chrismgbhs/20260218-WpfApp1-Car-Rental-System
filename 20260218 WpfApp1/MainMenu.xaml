<Window x:Class="_20260218_WpfApp1.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20260218_WpfApp1"
        mc:Ignorable="d"
        Title="MainMenu" Height="720" Width="1280" WindowStartupLocation="CenterScreen" Foreground="White">
    <Grid Background="#FF672121">
        <StackPanel VerticalAlignment="Center" Width="600">
            <TextBlock Text="MAIN MENU" Margin="25, 50, 25, 25" HorizontalAlignment="Center" FontSize="35" FontWeight="Bold"/>
            <Button Content="View Available Cars" Height="50" FontSize="20" />
            <Button Content="View Rented Cars" Height="50" FontSize="20"/>
            <Button Content="Send Car to Maintenance or Return Car from Maintenance" Height="50" FontSize="20"/>
            <Button Content="View Cars in Maintenance" Height="50" FontSize="20"/>
            <Button Content="View Mainthenance History" Height="50" FontSize="20"/>
            <Button Content="Add a Car" Height="50" FontSize="20"/>
            <Button Content="Add Multiple Cars via CSV file" Height="50" FontSize="20"/>
            <Button Content="Exit and Save" Height="50" FontSize="20" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
